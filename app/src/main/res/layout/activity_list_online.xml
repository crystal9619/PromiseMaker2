<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="missingPrefix"
    tools:context="com.example.leeje.androidpresentsystem.ListOnline">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/listOnline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/promiseDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="36dp"
        android:text="체크포인트설정" />

    <Button
        android:id="@+id/mainMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/promiseDetail"
        android:layout_below="@+id/promiseDetail"
        android:layout_marginTop="52dp"
        android:text="약속화면" />

    <Button
        android:id="@+id/groupMake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mainMap"
        android:layout_marginTop="52dp"
        android:text="그룹만들기"
        />

    <Button
        android:id="@+id/promiseMake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/promiseDetail"
        android:layout_below="@+id/listOnline"
        android:text="약속 만들기" />


</RelativeLayout>
